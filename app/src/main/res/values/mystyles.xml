<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="hoverbutton">
        <item name="android:drawable">@drawable/curve</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:shadowRadius">@integer/material_motion_duration_medium_1</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:radius">12dp</item>
    </style>
    <style name="servbutton">
        <item name="android:drawable">@drawable/servicebuttondesign</item>
    </style>
    <style name="proftextbox">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/textboxdesign</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="datapage">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="hintTextColor">@color/black</item>
        <item name="background">@drawable/circle1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>